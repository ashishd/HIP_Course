

# Detect the OS in use
ifeq ($(OS),Windows_NT) 
    detected_OS := Windows
else
    detected_OS := $(shell sh -c 'uname 2>/dev/null || echo Unknown')
endif

# Default flags

# Compiler locations
CXX=hipcc
CXXFLAGS=-std=c++11 -g -O2 -fopenmp
BASE_INC_DIR=/usr/include
BASE_LIB_DIR=/usr/lib/x86_64-linux-gnu
BASE_LIB_FLAGS=

ifeq ($(HIP_PLATFORM), nvidia)
    CXXFLAGS=-g -O2 -Xcompiler -fopenmp -Xcompiler -std=c++11
    BASE_LIB_FLAGS=-lgomp
endif