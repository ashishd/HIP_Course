

# Detect the OS in use
ifeq ($(OS),Windows_NT) 
    detected_OS := Windows
else
    detected_OS := $(shell sh -c 'uname 2>/dev/null || echo Unknown')
endif

# Default flags

# Compiler locations
CXX=hipcc
CXXFLAGS=-g -fopenmp

# Debugging instructions
ifeq ($(DEBUG), true)
    CXXFLAGS:=$(CXXFLAGS) -ggdb
endif

# Miscellaneous include flags for base compilation 
BASE_INC_FLAGS=-I../include

# Miscellaneous library flags for base compilation
BASE_LIB_FLAGS=

# Flags for CUDA platform
ifeq ($(HIP_PLATFORM), nvidia)
    CXXFLAGS=-O2 -Xcompiler -fopenmp
    ifeq ($(DEBUG), true)
        CXXFLAGS=-g -G -Xcompiler -fopenmp
    endif
    BASE_LIB_FLAGS=-lgomp
endif
